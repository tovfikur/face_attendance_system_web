# ============================================================
# Face Attendance System - Docker Deployment Environment
# ============================================================

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=face_attendance
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/face_attendance

# ============================================================
# REDIS CONFIGURATION
# ============================================================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================
# MINIO (S3-COMPATIBLE STORAGE) CONFIGURATION
# ============================================================
MINIO_ENDPOINT=http://minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=face-attendance
MINIO_SECURE=false

# ============================================================
# BACKEND API CONFIGURATION
# ============================================================
ENV=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:8080,http://frontend,http://nginx

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Face Attendance System
PROJECT_VERSION=1.0.0

# ============================================================
# CELERY CONFIGURATION
# ============================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=application/json

# ============================================================
# FACE DETECTION CONFIGURATION
# ============================================================
FACE_DETECTION_MODEL=hog
FACE_RECOGNITION_MODEL=default
CONFIDENCE_THRESHOLD=0.6

# ============================================================
# FRONTEND CONFIGURATION
# ============================================================
VITE_API_BASE_URL=http://localhost/api
VITE_WS_BASE_URL=ws://localhost/api
VITE_API_VERSION=v1
VITE_APP_NAME=Face Attendance System
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_FACE_DETECTION=true
VITE_ENABLE_REPORTS=true
VITE_ENABLE_SETTINGS=true

# Debug Mode
VITE_DEBUG=false

# ============================================================
# PORTS CONFIGURATION
# ============================================================
BACKEND_PORT=8000
FRONTEND_PORT=80
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
DB_PORT=5432
REDIS_PORT=6379

# ============================================================
# NGINX CONFIGURATION
# ============================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================
# SECURITY SETTINGS (PRODUCTION)
# ============================================================
# Change these values in production!
POSTGRES_PASSWORD=postgres123
MINIO_ROOT_PASSWORD=minioadmin123

# For HTTPS/TLS (add your certificates)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

